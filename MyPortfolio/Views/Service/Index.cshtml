@model List<MyPortfolio.Models.TblServices>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Servisler Sayfası</h3>

<table class="table table-bordered">
    <tr>
        <th style="text-align: center; align-content: center">#</th>
        <th style="text-align: center; align-content: center">Resim URL</th>
        <th style="text-align: center; align-content: center">Hizmet Adı</th>
        <th style="text-align: center; align-content: center">Açıklama</th>
        <th style="text-align: center; align-content: center">Durum</th>
        <th style="text-align: center; background-color : red ; align-content : center">Sil</th>
        <th style="text-align: center; background-color : green ; align-content: center">Güncelle</th>
        <th style="text-align: center; align-content: center">Aktif Yap</th>
        <th style="text-align: center; align-content: center">Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="align-content : center ; text-align : center">@item.ServiceId</td>
            <td style="align-content: center; text-align: center"><img src="@item.Icon" style="height : 50px; width : 50px" /></td>
            <td style="align-content : center ; text-align : center">@item.Title</td>
            <td style="align-content: center; text-align: center">@item.Description</td>
            <td style="align-content: center; text-align: center">@(item.Status == true ? "Aktif" : "Pasif")</td>
            <td style="text-align: center; align-content: center"><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger ">Sil</a></td>
            <td style="text-align: center; align-content: center"><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-success">Güncelle</a></td>
            <td style="text-align: center; align-content: center"><a href="/Service/MakeActive/@item.ServiceId" class="btn btn-outline-info">Aktif Yap</a></td>
            <td style="text-align: center; align-content: center"><a href="/Service/MakePassive/@item.ServiceId" class="btn btn-outline-warning">Pasif Yap</a></td>
        </tr>
    }


</table>
<br />
<a href="/Service/AddService" class="btn btn-outline-dark">Yeni Servis Ekle</a>

