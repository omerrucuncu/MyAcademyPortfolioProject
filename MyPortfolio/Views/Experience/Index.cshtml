@model List<MyPortfolio.Models.TblExperiences>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    
<br />
<br />
<h3>Deneyimler Sayfası</h3>

<table class="table table-bordered">
    <tr>
        <th style="text-align: center; align-content: center">#</th>
        <th style="text-align: center; align-content: center">Başlangıç Yılı</th>
        <th style="text-align: center; align-content: center">Bitiş Yılı</th>
        <th style="text-align: center; align-content: center">Ünvan</th>
        <th style="text-align: center; align-content: center">Açıklama</th>
        <th style="text-align: center; align-content: center">Şirket Adı</th>
        <th style="text-align: center; align-content: center">Konum</th>
        <th style="text-align: center; background-color : red ; align-content : center">Sil</th>
        <th style="text-align: center; background-color : green ; align-content: center">Güncelle</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="align-content : center ; text-align : center">@item.ExperienceId</td>
            <td style="align-content: center; text-align: center">@item.StartYear</td>
            <td style="align-content : center ; text-align : center">@item.EndYear</td>
            <td style="align-content: center; text-align: center">@item.Title</td>
            <td style="align-content: center; text-align: center">@item.Description</td>
            <td style="align-content: center; text-align: center">@item.Company</td>
            <td style="align-content: center; text-align: center">@item.Location</td>
            
            <td style="text-align: center; align-content: center"><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger ">Sil</a></td>
            <td style="text-align: center; align-content: center"><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-success">Güncelle</a></td>
            
        </tr>
    }


</table>
<br />
<a href="/Experience/AddExperience" class="btn btn-outline-dark">Yeni Deneyim Ekle</a>

