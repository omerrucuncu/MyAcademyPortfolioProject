@model List<MyPortfolio.Models.TblMessages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h3>Messages</h3>


<table class="table table-bordered">
    <tr>
        <th style="text-align : center ; align-content : center">#</th>
        <th style="text-align : center ; align-content : center">Name</th>
        <th style="text-align : center ; align-content : center">E-Mail</th>
        <th style="text-align : center ; align-content : center">Subject</th>
        <th style="text-align : center ; align-content : center">Message</th>
        <th style="text-align : center ; align-content : center ; background-color : red">Delete</th>
        @*<th style="text-align : center ; align-content : center ; background-color : green">Update</th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align : center ; align-content : center">@item.MessageId</td>
            <td style="text-align : center ; align-content : center">@item.Name</td>
            <td style="text-align : center ; align-content : center">@item.Email</td>
            <td style="text-align : center ; align-content : center">@item.Subject</td>
            <td style="text-align : center ; align-content : center">@item.MessageContent</td>
            <td style="text-align : center ; align-content : center"><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Delete</a></td>
            @*<td style="text-align : center ; align-content : center"><a href="#" class="btn btn-outline-success">Update</a></td>*@
        </tr>
    }
</table>

<br />
