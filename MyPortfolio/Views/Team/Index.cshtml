@model List<MyPortfolio.Models.TblTeams>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Teammates Page</h3>

<table class="table table-bordered">
    <tr>
        <th style="text-align: center; align-content: center">#</th>
        <th style="text-align: center; align-content: center">Image URL</th>
        <th style="text-align: center; align-content: center">Name Surname</th>
        <th style="text-align: center; align-content: center">Title</th>
        <th style="text-align: center; align-content: center">Description</th>
        <th style="text-align: center; align-content: center">Twitter URL</th>
        <th style="text-align: center; align-content: center">Facebook URL</th>
        <th style="text-align: center; align-content: center">Linkedin URL</th>
        <th style="text-align: center; align-content: center">Instagram URL</th>
        <th style="text-align: center; align-content: center">Status</th>
        <th style="text-align: center; background-color : red ; align-content : center">Delete</th>
        <th style="text-align: center; background-color : green ; align-content: center">Update</th>
        <th style="text-align: center; align-content: center">Make Active</th>
        <th style="text-align: center; align-content: center">Make Passive</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="align-content : center ; text-align : center">@item.TeamId</td>
            <td style="align-content: center; text-align: center"><img src="@item" style="height : 50px; width : 50px" /></td>
            <td style="align-content : center ; text-align : center">@item.NameSurname</td>
            <td style="align-content: center; text-align: center">@item.Title</td>
            <td style="align-content: center; text-align: center">@item.Description</td>
            <td style="align-content: center; text-align: center">@item.TwitterUrl</td>
            <td style="align-content: center; text-align: center">@item.FacebookUrl</td>
            <td style="align-content: center; text-align: center">@item.LinkedInUrl</td>
            <td style="align-content: center; text-align: center">@item.InstagramUrl</td>
            <td style="align-content: center; text-align: center">@(item.Status == true ? "Active" : "Passive")</td>
            <td style="text-align: center; align-content: center"><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger ">Delete</a></td>
            <td style="text-align: center; align-content: center"><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-success">Update</a></td>
            <td style="text-align: center; align-content: center"><a href="/Team/MakeActive/@item.TeamId" class="btn btn-outline-info">Make Active</a></td>
            <td style="text-align: center; align-content: center"><a href="/Team/MakePassive/@item.TeamId" class="btn btn-outline-warning">Make Passive</a></td>
        </tr>
    }


</table>
<br />
<a href="/Team/AddTeam" class="btn btn-outline-dark">Add New Teammate</a>

