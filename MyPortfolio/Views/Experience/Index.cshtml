@model List<MyPortfolio.Models.TblExperiences>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    
<br />
<br />
<h2>Experiences Page</h2>

<table class="table table-bordered">
    <tr>
        <th style="text-align: center; align-content: center">#</th>
        <th style="text-align: center; align-content: center">Start Year</th>
        <th style="text-align: center; align-content: center">End Year</th>
        <th style="text-align: center; align-content: center">Title</th>
        <th style="text-align: center; align-content: center">Description</th>
        <th style="text-align: center; align-content: center">Company</th>
        <th style="text-align: center; align-content: center">Location</th>
        <th style="text-align: center; background-color : red ; align-content : center">Delete</th>
        <th style="text-align: center; background-color : green ; align-content: center">Update</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="align-content : center ; text-align : center">@item.ExperienceId</td>
            <td style="align-content: center; text-align: center">@item.StartYear</td>
            <td style="align-content : center ; text-align : center">@item.EndYear</td>
            <td style="align-content: center; text-align: center">@item.Title</td>
            <td style="align-content: center; text-align: center">@item.Description</td>
            <td style="align-content: center; text-align: center">@item.Company</td>
            <td style="align-content: center; text-align: center">@item.Location</td>
            
            <td style="text-align: center; align-content: center"><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger ">Delete</a></td>
            <td style="text-align: center; align-content: center"><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-success">Update</a></td>
            
        </tr>
    }


</table>
<br />
<a href="/Experience/AddExperience" class="btn btn-outline-dark">Add New Experience</a>

