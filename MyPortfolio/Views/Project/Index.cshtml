@model List<MyPortfolio.Models.TblProjects>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h3>Projeler Sayfası</h3>

<table class="table table-bordered">
    <tr>
        <td style="text-align : center">#</td>
        <td style="text-align:center ">Resim URL</td>
        <td style="text-align:center">Proje Adı</td>
        <td style="text-align:center">Kategori</td>
        <td style="text-align:center">Github URL</td>
        <td style="text-align : center; background-color : red">Sil</td>
        <td style="text-align : center; background-color : green">Güncelle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td><img src="@item.ImageUrl" style="height : 50px; width : 50px" /></td>
            <td>@item.ProjectName</td>
            <td>@item.TblCategories.CategoryName</td>
            <td><a href="@item.GitHubUrl" target="_blank">Github Linki</a></td>
            <td style="text-align:center"><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-outline-danger">Sil</a></td>
            <td style="text-align:center"><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }


</table>
<br />
<a href="/Project/AddProject" class="btn btn-outline-dark">Yeni Proje Ekle</a>
