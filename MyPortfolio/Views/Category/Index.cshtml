@model List<MyPortfolio.Models.TblCategories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<br />
<h2>Categories Page</h2>

<table class="table table-bordered">
    <tr>
        <th style="text-align: center; align-content: center">#</th>
        <th style="text-align: center; align-content: center">Category Name</th>        
        <th style="text-align: center; align-content: center; background-color : red">Delete</th>
        <th style="text-align: center; align-content: center; background-color : green">Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td style="text-align: center; align-content: center">@count</td>
            <td style="text-align: center; align-content: center">@item.CategoryName</td>
            <td style="text-align: center; align-content: center"><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Delete</a></td>
            <td style="text-align: center; align-content: center"><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Update</a></td>
            
        </tr>
    }
</table>

<br />
<a href="/Category/AddCategory" class="btn btn-outline-dark">Add New Category</a>
