@model List<MyPortfolio.Models.TblServices>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Services Page</h3>

<table class="table table-bordered">
    <tr>
        <th style="text-align: center; align-content: center">#</th>
        <th style="text-align: center; align-content: center">Image URL</th>
        <th style="text-align: center; align-content: center">Service Name</th>
        <th style="text-align: center; align-content: center">Description</th>
        <th style="text-align: center; align-content: center">Status</th>
        <th style="text-align: center; background-color : red ; align-content : center">Delete</th>
        <th style="text-align: center; background-color : green ; align-content: center">Update</th>
        <th style="text-align: center; align-content: center">Make Active</th>
        <th style="text-align: center; align-content: center">Make Passive</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="align-content : center ; text-align : center">@item.ServiceId</td>
            <td style="align-content: center; text-align: center"><img src="@item.Icon" style="height : 50px; width : 50px" /></td>
            <td style="align-content : center ; text-align : center">@item.Title</td>
            <td style="align-content: center; text-align: center">@item.Description</td>
            <td style="align-content: center; text-align: center">@(item.Status == true ? "Aktif" : "Pasif")</td>
            <td style="text-align: center; align-content: center"><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger ">Delete</a></td>
            <td style="text-align: center; align-content: center"><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-success">Update</a></td>
            <td style="text-align: center; align-content: center"><a href="/Service/MakeActive/@item.ServiceId" class="btn btn-outline-info">Make Active</a></td>
            <td style="text-align: center; align-content: center"><a href="/Service/MakePassive/@item.ServiceId" class="btn btn-outline-warning">Make Passive</a></td>
        </tr>
    }


</table>
<br />
<a href="/Service/AddService" class="btn btn-outline-dark">Add New Service</a>

